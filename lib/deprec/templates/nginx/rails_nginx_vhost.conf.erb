<% if passenger_redirect_to_canonical_hostname -%>
<% (server_alias.split(" ") << domain).each do |server| -%>
server {
  # Redirect the non-www to www
  # <%= no_www = server.gsub(/^www\./,'') %> -> <%= server %>
  listen 80;
  server_name <%= no_www %>;

  rewrite ^(.*) http://<%= server %>$1 redirect;
}
<% end -%>
<% end -%>

server {
    listen       80;
    server_name  <%= domain %> <% 4.times do |counter| %> <%= domain.sub(/.*?\./, "assets#{counter}.") %><% end %> <%= server_alias %>;
    root <%= deploy_to %>/current/public;
    access_log <%= deploy_to %>/shared/log/<%= domain %>-access.log;
    error_log <%= deploy_to %>/shared/log/<%= domain %>-error.log;
    client_max_body_size  <%= nginx_client_max_body_size %>;

        if (-f $document_root/system/maintenance.html){
                rewrite  ^(.*)$  /system/maintenance.html last;
                break;
        }
        location / {
                if (-f $request_filename/index.html) {
                        rewrite (.*) $1/index.html break;
                }
                if (-f $request_filename.html) {
                        rewrite (.*) $1.html break;
                }       
                if (!-f $request_filename) {
                        proxy_pass http://<%= application %>;
                        break;
                }
        }

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
                root   html;
        }
}
